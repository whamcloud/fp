{
  "name": "@mfl/fp",
  "version": "7.1.0",
  "description": "A Functional Programming Lib.",
  "main": "source/fp.js",
  "scripts": {
    "eslint": "eslint ./",
    "test": "jest",
    "cover": "NODE_ENV=test yarn test -- --coverage",
    "flow": "flow"
  },
  "publishConfig": {
    "access": "public"
  },
  "pre-commit": [
    "flow",
    "eslint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:intel-hpdd/fp.git"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./setup-jasmine-env.js",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/setup-jasmine-env.js",
      "/test"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@iml)/"
    ]
  },
  "author": "MFL Team",
  "license": "MIT",
  "dependencies": {
    "@iml/maybe": "^2.1.1"
  },
  "devDependencies": {
    "babel-eslint": "7.1.1",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-preset-env": "1.1.8",
    "eslint": "3.15.0",
    "eslint-config-prettier": "1.1.1",
    "eslint-plugin-flowtype": "2.30.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-prettier": "2.0.0",
    "flow-bin": "0.39.0",
    "immutable": "3.8.1",
    "@mfl/flow-jasmine": "1.6.0",
    "@mfl/jasmine-n-matchers": "2.1.1",
    "jest": "18.1.0",
    "pre-commit": "1.2.2",
    "prettier": "0.16.0"
  }
}
